{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}