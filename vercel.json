{
  "version": 2,
  "buildCommand": "bash ./build.sh",
  "installCommand": "npm install",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "functions": {
    "api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/traders", "destination": "/api/serverless-handler.js" },
    { "source": "/api/refresh-data", "destination": "/api/serverless-handler.js" },
    { "source": "/api/(.*)", "destination": "/api/serverless-handler.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}