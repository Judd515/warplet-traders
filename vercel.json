{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/traders",
      "dest": "/api/serverless-handler.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/refresh-data",
      "dest": "/api/serverless-handler.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/serverless-handler.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}